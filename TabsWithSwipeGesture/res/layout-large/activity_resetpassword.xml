<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#f7f7f7">

    <TextView
        android:id="@+id/resetpasswordlabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/unlockview"
        android:layout_toRightOf="@+id/unlockview"
        android:text="@string/resetpasswordlabel"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="34sp"
        android:textColor="#3B5998" />

    <ImageView
        android:id="@+id/unlockview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="56dp"
        android:layout_marginTop="58dp"
        android:src="@drawable/resetpassword" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/resetpasswordlabel"
        android:layout_marginTop="58dp"
        android:text="@string/resetpassword"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/passwordupdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/error"
        android:layout_alignRight="@+id/resetpasswordlabel"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/passwordupdate"
        android:layout_alignRight="@+id/passwordupdate"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="@string/RetypePassword"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/confirmbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/confirmPassword"
        android:layout_marginTop="103dp"
        android:background="@drawable/continuebtn"
        android:text="@string/confirmlabel"
        android:textSize="24sp"
        android:textColor="#409ed3" />

    <TextView
        android:id="@+id/error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/unlockview"
        android:layout_alignRight="@+id/resetpasswordlabel"
        android:layout_below="@+id/resetpasswordlabel"
        android:layout_marginTop="28dp"
        android:textColor="#FF0000"
        android:textSize="22sp" />

</RelativeLayout>
