<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f7f7f7"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:layout_marginTop="17dp"
        android:text="Choose Any Option"
        android:textColor="#3B5998"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView"
        android:background="@drawable/continuebtn"
        android:textColor="#409ed3"
        android:text="Choose Image from Gallery" />

    <Button
        android:id="@+id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yes"
        android:layout_alignRight="@+id/yes"
        android:layout_below="@+id/yes"
        android:background="@drawable/continuebtn"
        android:textColor="#409ed3"
        android:text="Take Picture from Camera" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/yes"
        android:layout_alignRight="@+id/yes"
        android:layout_below="@+id/camera"
        android:background="@drawable/continuebtn"
        android:textColor="#409ed3"
        android:text="Cancel" />
    
</RelativeLayout>
